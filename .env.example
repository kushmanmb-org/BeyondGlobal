# Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# =============================================
# Blockchain Configuration
# =============================================

# Your Ethereum wallet private key (without 0x prefix)
# Generate a new wallet for development: https://vanity-eth.tk/
PRIVATE_KEY=your_private_key_here

# Infura Project ID for Ethereum node access
# Sign up at: https://infura.io/
INFURA_KEY=your_infura_project_id_here

# Etherscan API Key for contract verification
# Get one at: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# =============================================
# Network URLs
# =============================================

# Ethereum Sepolia Testnet
SEPOLIA_URL=https://sepolia.infura.io/v3/${INFURA_KEY}

# Ethereum Mainnet (use with caution!)
MAINNET_URL=https://mainnet.infura.io/v3/${INFURA_KEY}

# Local Development Network
LOCALHOST_URL=http://localhost:8545

# =============================================
# Smart Contract Configuration
# =============================================

# Initial token supply (in whole tokens, not wei)
CONTRACT_INITIAL_SUPPLY=1000000

# Deployed contract address (update after deployment)
CONTRACT_ADDRESS=

# Network ID where contract is deployed
# 1 = Mainnet, 11155111 = Sepolia, 1337 = Local
DEPLOYED_NETWORK_ID=11155111

# =============================================
# Application Configuration
# =============================================

# Environment: development, staging, production
NODE_ENV=development

# Application server port
PORT=3000

# Application name
APP_NAME=Kairos Blockchain Platform

# API base URL
API_BASE_URL=http://localhost:3000

# =============================================
# Frontend Configuration
# =============================================

# Frontend port (if separate from backend)
FRONTEND_PORT=8080

# Enable debug mode
DEBUG=true

# =============================================
# Security Configuration
# =============================================

# Session secret for authentication
SESSION_SECRET=your_random_session_secret_here

# JWT secret for token authentication
JWT_SECRET=your_jwt_secret_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================
# Database Configuration (if needed)
# =============================================

# Database URL
# DATABASE_URL=postgresql://user:password@localhost:5432/kairos_db

# =============================================
# Logging Configuration
# =============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log to file
LOG_TO_FILE=true

# Log directory
LOG_DIR=./logs

# =============================================
# Monitoring and Analytics
# =============================================

# Enable performance monitoring
ENABLE_MONITORING=false

# Analytics tracking ID (if using Google Analytics, etc.)
# ANALYTICS_ID=UA-XXXXXXXXX-X

# =============================================
# Rate Limiting
# =============================================

# Max requests per window
RATE_LIMIT_MAX=100

# Time window in minutes
RATE_LIMIT_WINDOW=15

# =============================================
# Additional Services
# =============================================

# IPFS gateway URL (if using IPFS)
# IPFS_GATEWAY=https://ipfs.io/ipfs/

# Email service configuration (if sending emails)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_email_password

# =============================================
# Notes
# =============================================
# 
# 1. Never share your private keys or secrets
# 2. Use different keys for development and production
# 3. Consider using hardware wallets for production
# 4. Regularly rotate secrets and API keys
# 5. Keep this file secure and never commit to git
#
